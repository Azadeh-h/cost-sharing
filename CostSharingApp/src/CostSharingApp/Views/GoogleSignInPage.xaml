<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CostSharingApp.ViewModels"
             x:Class="CostSharingApp.Views.GoogleSignInPage"
             x:DataType="viewmodels:GoogleSignInViewModel"
             Title="Google Integration">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Label Text="Google Drive &amp; Gmail Integration"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>
            
            <Label Text="Connect your Google account to sync groups across devices and send invitations via Gmail."
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource Gray600}"/>
            
            <!-- Status Section -->
            <Frame BorderColor="{DynamicResource Gray300}"
                   BackgroundColor="{DynamicResource Gray100}"
                   Padding="15"
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Status:"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding StatusMessage}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="10" IsVisible="{Binding IsSignedIn}">
                        <Label Text="Account:"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label Text="{Binding UserEmail}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Sign In Section -->
            <VerticalStackLayout Spacing="15" IsVisible="{Binding IsSignedIn, Converter={StaticResource InvertedBoolConverter}}">
                
                <Label Text="Features you'll get:"
                       FontSize="16"
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>
                
                <HorizontalStackLayout Spacing="10">
                    <Label Text="✓" TextColor="Green" FontSize="18"/>
                    <Label Text="Sync groups across all your devices"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="10">
                    <Label Text="✓" TextColor="Green" FontSize="18"/>
                    <Label Text="Automatic backup to Google Drive"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="10">
                    <Label Text="✓" TextColor="Green" FontSize="18"/>
                    <Label Text="Send invitations via Gmail"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Spacing="10">
                    <Label Text="✓" TextColor="Green" FontSize="18"/>
                    <Label Text="Share groups with other users"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <Button Text="Sign In with Google"
                        Command="{Binding SignInCommand}"
                        BackgroundColor="#4285F4"
                        TextColor="White"
                        FontAttributes="Bold"
                        Margin="0,20,0,0"
                        HeightRequest="50"/>
            </VerticalStackLayout>
            
            <!-- Signed In Section -->
            <VerticalStackLayout Spacing="15" IsVisible="{Binding IsSignedIn}">
                
                <Label Text="You're connected!"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Green"
                       Margin="0,10,0,5"/>
                
                <Button Text="Enable Auto-Sync"
                        Command="{Binding EnableAutoSyncCommand}"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="50"/>
                
                <Label Text="Auto-sync will sync your groups every 30 seconds."
                       FontSize="12"
                       TextColor="{DynamicResource Gray600}"
                       HorizontalTextAlignment="Center"/>
                
                <Button Text="Sign Out"
                        Command="{Binding SignOutCommand}"
                        BackgroundColor="{DynamicResource Gray400}"
                        TextColor="White"
                        Margin="0,20,0,0"
                        HeightRequest="45"/>
            </VerticalStackLayout>
            
            <!-- Activity Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             HorizontalOptions="Center"
                             Color="{DynamicResource Primary}"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
