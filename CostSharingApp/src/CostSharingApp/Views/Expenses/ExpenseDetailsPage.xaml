<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Expenses"
             x:Class="CostSharingApp.Views.Expenses.ExpenseDetailsPage"
             x:DataType="vm:ExpenseDetailsViewModel"
             Title="Expense Details">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />

            <StackLayout IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                         Spacing="16">
                <!-- Description -->
                <Frame Padding="16" CornerRadius="8">
                    <StackLayout Spacing="8">
                        <Label Text="Description" FontSize="12" TextColor="{StaticResource Gray500}" />
                        <Label Text="{Binding Expense.Description}"
                               FontSize="18"
                               FontAttributes="Bold" />
                    </StackLayout>
                </Frame>

                <!-- Amount and Date -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                    <Frame Grid.Column="0" Padding="16" CornerRadius="8">
                        <StackLayout Spacing="8">
                            <Label Text="Amount" FontSize="12" TextColor="{StaticResource Gray500}" />
                            <Label Text="{Binding Expense.TotalAmount, StringFormat='${0:F2}'}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" />
                        </StackLayout>
                    </Frame>
                    <Frame Grid.Column="1" Padding="16" CornerRadius="8">
                        <StackLayout Spacing="8">
                            <Label Text="Date" FontSize="12" TextColor="{StaticResource Gray500}" />
                            <Label Text="{Binding Expense.ExpenseDate, StringFormat='{0:MMM dd, yyyy}'}"
                                   FontSize="14" />
                        </StackLayout>
                    </Frame>
                </Grid>

                <!-- Paid By -->
                <Frame Padding="16" CornerRadius="8">
                    <StackLayout Spacing="8">
                        <Label Text="Paid By" FontSize="12" TextColor="{StaticResource Gray500}" />
                        <Label Text="{Binding Expense.PaidBy, StringFormat='User: {0}'}"
                               FontSize="14"
                               FontAttributes="Bold" />
                    </StackLayout>
                </Frame>

                <!-- Split Breakdown -->
                <Label Text="Split Breakdown" FontSize="18" FontAttributes="Bold" Margin="0,8,0,0" />
                <Label Text="{Binding Expense.SplitType, StringFormat='Type: {0}'}"
                       FontSize="12"
                       TextColor="{StaticResource Gray500}"
                       Margin="0,0,0,4" />
                <CollectionView ItemsSource="{Binding Splits}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8">
                                <Grid ColumnDefinitions="*,Auto,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding UserId, StringFormat='User: {0}'}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Percentage, StringFormat='{0:F2}%'}"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           Margin="0,0,12,0" />
                                    <Label Grid.Column="2"
                                           Text="{Binding Amount, StringFormat='${0:F2}'}"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Action Buttons (only for creator) -->
                <HorizontalStackLayout Spacing="12" Margin="0,16,0,0" IsVisible="{Binding IsCreator}">
                    <Button Text="Edit"
                            Command="{Binding EditExpenseCommand}"
                            HorizontalOptions="FillAndExpand" />
                    <Button Text="Delete"
                            Command="{Binding DeleteExpenseCommand}"
                            BackgroundColor="{StaticResource Danger}"
                            HorizontalOptions="FillAndExpand" />
                </HorizontalStackLayout>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
