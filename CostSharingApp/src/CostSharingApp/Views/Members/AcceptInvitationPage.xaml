<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Members"
             x:Class="CostSharingApp.Views.Members.AcceptInvitationPage"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AcceptInvitationViewModel />
    </ContentPage.BindingContext>

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="16" VerticalOptions="Center">
            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                   HorizontalTextAlignment="Center" />

            <!-- Invitation details -->
            <Frame BorderColor="{StaticResource Primary}" Padding="20" CornerRadius="8" IsVisible="{Binding HasInvitation}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸŽ‰" FontSize="48" HorizontalTextAlignment="Center" />
                    <Label Text="You're Invited!"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <Label HorizontalTextAlignment="Center" TextColor="{StaticResource Gray600}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding InviterName}" FontAttributes="Bold" />
                                <Span Text=" invited you to join" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label Text="{Binding GroupName}"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource Primary}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Accept/Decline buttons -->
            <StackLayout Spacing="12" IsVisible="{Binding HasInvitation}">
                <Button Text="Accept Invitation"
                        Command="{Binding AcceptCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        FontSize="16"
                        HeightRequest="50" />

                <Button Text="Decline"
                        Command="{Binding DeclineCommand}"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Gray900}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            </StackLayout>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HorizontalOptions="Center"
                              Margin="0,20,0,0" />

            <!-- Not authenticated message -->
            <Frame BorderColor="{StaticResource Gray300}" Padding="16" CornerRadius="8" IsVisible="{Binding NeedsAuthentication}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Sign In Required"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Please sign in or create an account to accept this invitation."
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource Gray600}" />
                    <Button Text="Sign In"
                            Command="{Binding SignInCommand}"
                            Margin="0,8,0,0" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
