<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Members"
             x:Class="CostSharingApp.Views.Members.InviteMemberPage"
             x:DataType="vm:InviteMemberViewModel"
             Title="{Binding Title}">

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="16">
            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" />

            <!-- Instructions -->
            <Label Text="Add a new member"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Label Text="Enter the name and email of the person you want to add to the group."
                   TextColor="{StaticResource Gray600}"
                   FontSize="14" />

            <!-- Name input -->
            <StackLayout Spacing="8">
                <Label Text="Name" FontAttributes="Bold" />
                <Entry Text="{Binding MemberName}"
                       Placeholder="e.g. John Smith"
                       ReturnType="Next" />
            </StackLayout>

            <!-- Email input -->
            <StackLayout Spacing="8">
                <Label Text="Email Address" FontAttributes="Bold" />
                <Entry Text="{Binding MemberEmail}"
                       Placeholder="friend@example.com"
                       Keyboard="Email"
                       ReturnType="Done" />
            </StackLayout>

            <!-- Info box -->
            <Frame BorderColor="{StaticResource Gray300}" Padding="12" CornerRadius="8" Margin="0,8,0,0">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="ℹ️" FontSize="20" />
                    <Label VerticalOptions="Center" TextColor="{StaticResource Gray600}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="The member will be " />
                                <Span Text="added immediately" FontAttributes="Bold" />
                                <Span Text=" and can start sharing expenses." />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

            <!-- Action buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,16,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Gray900}" />

                <Button Grid.Column="1"
                        Text="Add Member"
                        Command="{Binding AddMemberCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            </Grid>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
