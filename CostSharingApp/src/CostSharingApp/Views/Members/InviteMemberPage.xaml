<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Members"
             x:Class="CostSharingApp.Views.Members.InviteMemberPage"
             x:DataType="vm:InviteMemberViewModel"
             Title="{Binding Title}">

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="16">
            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" />

            <!-- Instructions -->
            <Label Text="Invite someone to your group"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Label Text="Send an invitation via email or SMS. They'll receive a link to join the group."
                   TextColor="{StaticResource Gray600}"
                   FontSize="14" />

            <!-- Invitation method selection -->
            <Label Text="Invitation Method" FontAttributes="Bold" />
            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <RadioButton Grid.Column="0"
                            Content="Email"
                            GroupName="InvitationMethod"
                            IsChecked="{Binding IsEmailMethod}"
                            CheckedChanged="OnMethodChanged" />
                <RadioButton Grid.Column="1"
                            Content="SMS"
                            GroupName="InvitationMethod"
                            IsChecked="{Binding IsSmsMethod}"
                            CheckedChanged="OnMethodChanged" />
            </Grid>

            <!-- Email input -->
            <StackLayout Spacing="8" IsVisible="{Binding IsEmailMethod}">
                <Label Text="Email Address" FontAttributes="Bold" />
                <Entry Text="{Binding InviteeEmail}"
                       Placeholder="friend@example.com"
                       Keyboard="Email"
                       ReturnType="Done" />
            </StackLayout>

            <!-- SMS input -->
            <StackLayout Spacing="8" IsVisible="{Binding IsSmsMethod}">
                <Label Text="Phone Number" FontAttributes="Bold" />
                <Entry Text="{Binding InviteePhone}"
                       Placeholder="+61412345678"
                       Keyboard="Telephone"
                       ReturnType="Done" />
                <Label Text="Use international format (e.g., +61 for Australia)"
                       TextColor="{StaticResource Gray500}"
                       FontSize="12" />
            </StackLayout>

            <!-- Info box -->
            <Frame BorderColor="{StaticResource Gray300}" Padding="12" CornerRadius="8" Margin="0,8,0,0">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="ℹ️" FontSize="20" />
                    <Label VerticalOptions="Center" TextColor="{StaticResource Gray600}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Invitations expire after " />
                                <Span Text="7 days" FontAttributes="Bold" />
                                <Span Text=". You can resend if needed." />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

            <!-- Action buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,16,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Gray900}" />

                <Button Grid.Column="1"
                        Text="Send Invitation"
                        Command="{Binding SendInvitationCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            </Grid>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
