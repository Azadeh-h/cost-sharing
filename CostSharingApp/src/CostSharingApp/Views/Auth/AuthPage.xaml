<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Auth"
             x:Class="CostSharingApp.Views.Auth.AuthPage"
             x:DataType="vm:AuthViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16" VerticalOptions="Center">
            
            <!-- App Logo/Title -->
            <VerticalStackLayout Spacing="8" Margin="0,0,0,24">
                <Label Text="ðŸ’°" 
                       FontSize="64" 
                       HorizontalOptions="Center" />
                <Label Text="Cost Sharing" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="{StaticResource Primary}" />
                <Label Text="Split expenses with friends and family" 
                       FontSize="14" 
                       HorizontalOptions="Center" 
                       TextColor="{StaticResource Gray500}" />
            </VerticalStackLayout>

            <!-- Form Card -->
            <Frame BackgroundColor="White" 
                   Padding="20" 
                   CornerRadius="12" 
                   HasShadow="True"
                   BorderColor="Transparent">
                <VerticalStackLayout Spacing="16">
                    
                    <!-- Mode Header -->
                    <Label Text="{Binding ActionButtonText}" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />

                    <!-- Email Field -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Email" FontSize="14" TextColor="{StaticResource Gray600}" />
                        <Entry Text="{Binding Email}" 
                               Placeholder="you@example.com" 
                               Keyboard="Email"
                               ReturnType="Next" />
                        <Label Text="{Binding EmailError}" 
                               TextColor="Red" 
                               FontSize="12"
                               IsVisible="{Binding EmailError, Converter={StaticResource StringToBoolConverter}}" />
                    </VerticalStackLayout>

                    <!-- Password Field -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Password" FontSize="14" TextColor="{StaticResource Gray600}" />
                        <Entry Text="{Binding Password}" 
                               Placeholder="Enter password" 
                               IsPassword="True"
                               ReturnType="Next" />
                        <Label Text="{Binding PasswordError}" 
                               TextColor="Red" 
                               FontSize="12"
                               IsVisible="{Binding PasswordError, Converter={StaticResource StringToBoolConverter}}" />
                    </VerticalStackLayout>

                    <!-- Confirm Password (Sign Up only) -->
                    <VerticalStackLayout Spacing="4" IsVisible="{Binding IsSignInMode, Converter={StaticResource InvertedBoolConverter}}">
                        <Label Text="Confirm Password" FontSize="14" TextColor="{StaticResource Gray600}" />
                        <Entry Text="{Binding ConfirmPassword}" 
                               Placeholder="Re-enter password" 
                               IsPassword="True"
                               ReturnType="Next" />
                        <Label Text="{Binding ConfirmPasswordError}" 
                               TextColor="Red" 
                               FontSize="12"
                               IsVisible="{Binding ConfirmPasswordError, Converter={StaticResource StringToBoolConverter}}" />
                    </VerticalStackLayout>

                    <!-- Display Name (Sign Up only) -->
                    <VerticalStackLayout Spacing="4" IsVisible="{Binding IsSignInMode, Converter={StaticResource InvertedBoolConverter}}">
                        <Label Text="Display Name" FontSize="14" TextColor="{StaticResource Gray600}" />
                        <Entry Text="{Binding DisplayName}" 
                               Placeholder="Your name" 
                               ReturnType="Done" />
                        <Label Text="{Binding DisplayNameError}" 
                               TextColor="Red" 
                               FontSize="12"
                               IsVisible="{Binding DisplayNameError, Converter={StaticResource StringToBoolConverter}}" />
                    </VerticalStackLayout>

                    <!-- General Error -->
                    <Frame BackgroundColor="#FFEBEE" 
                           Padding="12" 
                           CornerRadius="8" 
                           BorderColor="#EF5350"
                           IsVisible="{Binding GeneralError, Converter={StaticResource StringToBoolConverter}}">
                        <Label Text="{Binding GeneralError}" 
                               TextColor="#C62828" 
                               FontSize="14" />
                    </Frame>

                    <!-- Submit Button -->
                    <Button Text="{Binding ActionButtonText}" 
                            Command="{Binding SubmitCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="8"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />

                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       IsVisible="{Binding IsBusy}"
                                       Color="{StaticResource Primary}" />

                    <!-- Toggle Mode Link -->
                    <Label Text="{Binding ToggleModeText}" 
                           FontSize="14" 
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleModeCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Frame>

            <!-- Password Requirements (Sign Up only) -->
            <Frame BackgroundColor="{StaticResource Gray200}" 
                   Padding="12" 
                   CornerRadius="8"
                   BorderColor="Transparent"
                   IsVisible="{Binding IsSignInMode, Converter={StaticResource InvertedBoolConverter}}">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Password requirements:" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource Gray600}" />
                    <Label Text="â€¢ At least 8 characters" FontSize="12" TextColor="{StaticResource Gray500}" />
                    <Label Text="â€¢ At least one number" FontSize="12" TextColor="{StaticResource Gray500}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
