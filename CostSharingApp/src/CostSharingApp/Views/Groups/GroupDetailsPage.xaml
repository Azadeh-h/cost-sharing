<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Groups"
             xmlns:models="clr-namespace:CostSharing.Core.Models;assembly=CostSharing.Core"
             x:Class="CostSharingApp.Views.Groups.GroupDetailsPage"
             x:DataType="vm:GroupDetailsViewModel"
             Title="{Binding Title}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView Padding="16">
            <VerticalStackLayout Spacing="16">
            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" />

            <!-- Group info -->
            <Frame BorderColor="{StaticResource Primary}" Padding="16" CornerRadius="8">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Group.Name}"
                           FontSize="24"
                           FontAttributes="Bold" />
                    <Label Text="{Binding Group.Currency}"
                           TextColor="{StaticResource Gray600}"
                           FontSize="16" />
                    <Label Text="{Binding Group.CreatedAt, StringFormat='Created: {0:MMM dd, yyyy}'}"
                           TextColor="{StaticResource Gray500}"
                           FontSize="14" />
                </VerticalStackLayout>
            </Frame>

            <!-- Balance Summary -->
            <Frame BorderColor="{StaticResource Secondary}" Padding="16" CornerRadius="8" BackgroundColor="{StaticResource Secondary}">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Your Balance"
                           FontSize="14"
                           TextColor="{StaticResource Gray600}" />
                    <Label Text="{Binding UserBalance, StringFormat='${0:F2}'}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{Binding UserBalanceColor}" />
                    <Label Text="{Binding UserBalanceDescription}"
                           FontSize="12"
                           TextColor="{StaticResource Gray600}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Admin actions -->
            <StackLayout Spacing="8" IsVisible="{Binding IsAdmin}">
                <Label Text="Admin Actions" FontSize="18" FontAttributes="Bold" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                    <Button Grid.Column="0"
                            Text="Edit Group"
                            Command="{Binding EditGroupCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="{StaticResource SecondaryDarkText}" />
                    <Button Grid.Column="1"
                            Text="Delete Group"
                            Command="{Binding DeleteGroupCommand}"
                            BackgroundColor="#D32F2F"
                            TextColor="White" />
                </Grid>
            </StackLayout>

            <!-- Members section -->
            <Label Text="Members" FontSize="18" FontAttributes="Bold" Margin="0,8,0,0" />

            <CollectionView ItemsSource="{Binding Members}">
                <CollectionView.EmptyView>
                    <Label Text="No members yet"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,16,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:MemberViewModel">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Remove"
                                              BackgroundColor="#D32F2F"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=RemoveMemberCommand}"
                                              CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0"
                                           Text="ðŸ‘¤"
                                           FontSize="24"
                                           VerticalOptions="Center"
                                           Margin="0,0,12,0" />
                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding UserName}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Email}"
                                               TextColor="{StaticResource Gray600}"
                                               FontSize="12" />
                                        <Label Text="{Binding JoinedAt, StringFormat='Joined: {0:MMM dd, yyyy}'}"
                                               TextColor="{StaticResource Gray500}"
                                               FontSize="12" />
                                    </StackLayout>
                                    <Frame Grid.Column="2"
                                           Padding="8,4"
                                           CornerRadius="4"
                                           BackgroundColor="{StaticResource Primary}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding Role, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Admin}">
                                        <Label Text="Admin"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold" />
                                    </Frame>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add member button -->
            <Button Text="Invite Member"
                    Command="{Binding InviteMemberCommand}"
                    IsVisible="{Binding IsAdmin}"
                    Margin="0,8,0,0" />

            <!-- Pending Invitations section -->
            <StackLayout IsVisible="{Binding HasPendingInvitations}" Margin="0,16,0,0">
                <Label Text="Pending Invitations" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource Gray600}" />
                
                <CollectionView ItemsSource="{Binding PendingInvitations}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:PendingInvitation">
                            <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8" BackgroundColor="#FFF3E0" BorderColor="#FF9800">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0"
                                           Text="âœ‰ï¸"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Margin="0,0,12,0" />
                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding InvitedEmail}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding InvitedAt, StringFormat='Invited: {0:MMM dd, yyyy}'}"
                                               TextColor="{StaticResource Gray500}"
                                               FontSize="12" />
                                        <Label Text="Pending"
                                               TextColor="#FF9800"
                                               FontSize="12"
                                               FontAttributes="Italic" />
                                    </StackLayout>
                                    <Button Grid.Column="2"
                                            Text="Cancel"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=CancelInvitationCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#D32F2F"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="8,4"
                                            VerticalOptions="Center"
                                            IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=IsAdmin}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!-- Google Integration Section -->
            <StackLayout Spacing="8" Margin="0,8,0,0" IsVisible="{Binding IsAdmin}">
                <Label Text="Google Integration" FontSize="18" FontAttributes="Bold" />
                
                <VerticalStackLayout Spacing="4">
                    <Button Text="{Binding SyncButtonText}"
                            Command="{Binding SyncGroupCommand}"
                            BackgroundColor="{Binding SyncButtonColor}"
                            TextColor="White" />
                    <Label Text="{Binding LastSyncDisplayText}"
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           IsVisible="{Binding HasSyncedBefore}" />
                </VerticalStackLayout>
            </StackLayout>

            <!-- Expenses section -->
            <Label Text="Expenses" FontSize="18" FontAttributes="Bold" Margin="0,24,0,8" />
            <Button Text="+ Add Expense"
                    Command="{Binding AddExpenseCommand}"
                    HorizontalOptions="Start"
                    Margin="0,0,0,8" />

            <CollectionView ItemsSource="{Binding Expenses}">
                <CollectionView.EmptyView>
                    <Label Text="No expenses yet"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,8,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Expense">
                        <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=EditExpenseCommand}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0"
                                       Text="ðŸ’°"
                                       FontSize="24"
                                       VerticalOptions="Center" />
                                <StackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding ExpenseDate, StringFormat='{0:MMM dd, yyyy}'}"
                                           TextColor="{StaticResource Gray500}"
                                           FontSize="12" />
                                </StackLayout>
                                <Label Grid.Column="2"
                                       Text="{Binding TotalAmount, StringFormat='${0:F2}'}" 
                                       FontSize="16"                                       
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Debts section -->
            <HorizontalStackLayout Spacing="8" Margin="0,16,0,8">
                <Label Text="Debts Summary"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start" />
                <Button Text="ðŸ’¡ View Simplified"
                        Command="{Binding ViewSimplifiedDebtsCommand}"
                        FontSize="12"
                        Padding="8,4"
                        CornerRadius="4"
                        BackgroundColor="{StaticResource Primary}"
                        HorizontalOptions="End" />
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Debts}">
                <CollectionView.EmptyView>
                    <Label Text="All settled up! ðŸŽ‰"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,8,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:DebtViewModel">
                        <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8" BackgroundColor="{StaticResource Secondary}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{Binding DebtorName}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                                <Label Text="owes"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding CreditorName}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Amount, StringFormat='${0:F2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Danger}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="EndAndExpand" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Settlement History section -->
            <Label Text="Settlement History"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,16,0,8" />

            <CollectionView ItemsSource="{Binding Settlements}">
                <CollectionView.EmptyView>
                    <Label Text="No settlements recorded yet"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,8,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Settlement">
                        <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8" BackgroundColor="{StaticResource Tertiary}">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0"
                                       Text="âœ“"
                                       FontSize="20"
                                       TextColor="{StaticResource Success}"
                                       VerticalOptions="Center" />
                                <StackLayout Grid.Column="1" VerticalOptions="Center">
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="{Binding PaidBy, StringFormat='User {0}'}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="paid"
                                               TextColor="{StaticResource Gray600}"
                                               FontSize="12" />
                                        <Label Text="{Binding PaidTo, StringFormat='User {0}'}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                    </HorizontalStackLayout>
                                    <Label Text="{Binding SettlementDate, StringFormat='{0:MMM dd, yyyy}'}"
                                           TextColor="{StaticResource Gray500}"
                                           FontSize="12" />
                                </StackLayout>
                                <Label Grid.Column="2"
                                       Text="{Binding Amount, StringFormat='${0:F2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Success}"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HorizontalOptions="Center"
                              Margin="0,16,0,0" />
        </VerticalStackLayout>
    </ScrollView>
    </RefreshView>
</ContentPage>
