<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CostSharingApp.ViewModels.Groups"
             x:Class="CostSharingApp.Views.Groups.GroupDetailsPage"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:GroupDetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="16">
            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}" />

            <!-- Group info -->
            <Frame BorderColor="{StaticResource Primary}" Padding="16" CornerRadius="8">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Group.Name}"
                           FontSize="24"
                           FontAttributes="Bold" />
                    <Label Text="{Binding Group.Currency}"
                           TextColor="{StaticResource Gray600}"
                           FontSize="16" />
                    <Label Text="{Binding Group.CreatedAt, StringFormat='Created: {0:MMM dd, yyyy}'}"
                           TextColor="{StaticResource Gray500}"
                           FontSize="14" />
                </VerticalStackLayout>
            </Frame>

            <!-- Admin actions -->
            <StackLayout Spacing="8" IsVisible="{Binding IsAdmin}">
                <Label Text="Admin Actions" FontSize="18" FontAttributes="Bold" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                    <Button Grid.Column="0"
                            Text="Edit Group"
                            Command="{Binding EditGroupCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="{StaticResource SecondaryDarkText}" />
                    <Button Grid.Column="1"
                            Text="Delete Group"
                            Command="{Binding DeleteGroupCommand}"
                            BackgroundColor="#D32F2F"
                            TextColor="White" />
                </Grid>
            </StackLayout>

            <!-- Members section -->
            <Label Text="Members" FontSize="18" FontAttributes="Bold" Margin="0,8,0,0" />

            <CollectionView ItemsSource="{Binding Members}">
                <CollectionView.EmptyView>
                    <Label Text="No members yet"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,16,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Remove"
                                              BackgroundColor="#D32F2F"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=RemoveMemberCommand}"
                                              CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Label Grid.Column="0"
                                           Text="ðŸ‘¤"
                                           FontSize="24"
                                           VerticalOptions="Center"
                                           Margin="0,0,12,0" />
                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding UserId, StringFormat='User ID: {0}'}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding JoinedAt, StringFormat='Joined: {0:MMM dd, yyyy}'}"
                                               TextColor="{StaticResource Gray500}"
                                               FontSize="12" />
                                    </StackLayout>
                                    <Frame Grid.Column="2"
                                           Padding="8,4"
                                           CornerRadius="4"
                                           BackgroundColor="{StaticResource Primary}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding Role, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Admin}">
                                        <Label Text="Admin"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold" />
                                    </Frame>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Pending invitations section -->
            <StackLayout Spacing="8" IsVisible="{Binding IsAdmin}" Margin="0,16,0,0">
                <Label Text="Pending Invitations" FontSize="18" FontAttributes="Bold" />
                
                <CollectionView ItemsSource="{Binding PendingInvitations}">
                    <CollectionView.EmptyView>
                        <Label Text="No pending invitations"
                               TextColor="{StaticResource Gray500}"
                               FontSize="12"
                               Margin="0,8,0,0" />
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8" BackgroundColor="{StaticResource Secondary}">
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8">
                                    <Label Grid.Column="0"
                                           Text="ðŸ“§"
                                           FontSize="20"
                                           VerticalOptions="Center" />
                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding InviteeContact}"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding SentAt, StringFormat='Sent: {0:MMM dd, yyyy}'}"
                                               TextColor="{StaticResource Gray600}"
                                               FontSize="12" />
                                    </StackLayout>
                                    <Button Grid.Column="2"
                                            Text="Resend"
                                            FontSize="12"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=ResendInvitationCommand}"
                                            CommandParameter="{Binding .}" />
                                    <Button Grid.Column="3"
                                            Text="Cancel"
                                            FontSize="12"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            BackgroundColor="{StaticResource Gray300}"
                                            TextColor="{StaticResource Gray900}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GroupDetailsViewModel}}, Path=CancelInvitationCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!-- Invite member button -->
            <Button Text="Invite Member"
                    Command="{Binding InviteMemberCommand}"
                    IsVisible="{Binding IsAdmin}"
                    Margin="0,8,0,0" />

            <!-- Expenses section -->
            <Label Text="Expenses" FontSize="18" FontAttributes="Bold" Margin="0,24,0,8" />
            <Button Text="+ Add Expense"
                    Command="{Binding AddExpenseCommand}"
                    HorizontalOptions="Start"
                    Margin="0,0,0,8" />

            <CollectionView ItemsSource="{Binding Expenses}">
                <CollectionView.EmptyView>
                    <Label Text="No expenses yet"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,8,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Label Grid.Column="0"
                                       Text="ðŸ’°"
                                       FontSize="24"
                                       VerticalOptions="Center" />
                                <StackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding ExpenseDate, StringFormat='{0:MMM dd, yyyy}'}"
                                           TextColor="{StaticResource Gray500}"
                                           FontSize="12" />
                                </StackLayout>
                                <Label Grid.Column="2"
                                       Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Debts section -->
            <Label Text="Debts Summary" FontSize="18" FontAttributes="Bold" Margin="0,16,0,8" />

            <CollectionView ItemsSource="{Binding Debts}">
                <CollectionView.EmptyView>
                    <Label Text="All settled up! ðŸŽ‰"
                           TextColor="{StaticResource Gray500}"
                           HorizontalTextAlignment="Center"
                           Margin="0,8,0,0" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8" BackgroundColor="{StaticResource Secondary}">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{Binding DebtorId, StringFormat='User {0}'}"
                                       FontSize="14"
                                       VerticalOptions="Center" />
                                <Label Text="owes"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="12"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding CreditorId, StringFormat='User {0}'}"
                                       FontSize="14"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Amount, StringFormat='${0:F2}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Danger}"
                                       VerticalOptions="Center"
                                       HorizontalOptions="EndAndExpand" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HorizontalOptions="Center"
                              Margin="0,16,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
