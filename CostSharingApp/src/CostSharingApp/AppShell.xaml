<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CostSharingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CostSharingApp"
    Shell.FlyoutBehavior="Flyout">

    <!--
        App Shell provides unified navigation structure for MAUI apps.
        Routes are defined here and registered in code-behind.
    -->

    <FlyoutItem Title="Dashboard" Icon="icon_dashboard.png">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:Views.Dashboard.DashboardPage}"
            Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Groups" Icon="icon_groups.png">
        <ShellContent
            Title="My Groups"
            ContentTemplate="{DataTemplate local:Views.Groups.GroupListPage}"
            Route="groups" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="icon_settings.png">
        <ShellContent
            Title="Settings"
            Route="settings" />
    </FlyoutItem>

</Shell>
