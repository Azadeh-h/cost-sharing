<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CostSharingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CostSharingApp"
    Shell.FlyoutBehavior="Flyout">

    <!--
        App Shell provides unified navigation structure for MAUI apps.
        Routes are defined here and registered in code-behind.
    -->

    <!-- Flyout Header with Sync Status -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}" Padding="16" RowDefinitions="Auto,Auto">
            <Label Grid.Row="0" 
                   Text="Cost Sharing App" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="White" />
            <HorizontalStackLayout Grid.Row="1" Spacing="8" Margin="0,8,0,0">
                <Label x:Name="SyncStatusIcon" 
                       Text="ðŸ”„" 
                       FontSize="16" 
                       TextColor="White"
                       VerticalOptions="Center" />
                <Label x:Name="SyncStatusLabel" 
                       Text="Synced" 
                       FontSize="14" 
                       TextColor="White"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Dashboard" Icon="icon_dashboard.png">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:Views.Dashboard.DashboardPage}"
            Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Groups" Icon="icon_groups.png">
        <ShellContent
            Title="My Groups"
            ContentTemplate="{DataTemplate local:Views.Groups.GroupListPage}"
            Route="groups" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="icon_settings.png">
        <ShellContent
            Title="Settings"
            Route="settings" />
    </FlyoutItem>

</Shell>
