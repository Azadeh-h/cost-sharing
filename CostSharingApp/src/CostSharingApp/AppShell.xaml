<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CostSharingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CostSharingApp"
    xmlns:views="clr-namespace:CostSharingApp.Views"
    xmlns:auth="clr-namespace:CostSharingApp.Views.Auth"
    xmlns:dashboard="clr-namespace:CostSharingApp.Views.Dashboard"
    xmlns:groups="clr-namespace:CostSharingApp.Views.Groups"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="200" BackgroundColor="{StaticResource Primary}">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Image Source="dotnet_bot.png" HeightRequest="100" WidthRequest="100" />
                <Label Text="Cost Sharing" FontSize="24" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Authentication Page (hidden from flyout) -->
    <ShellContent ContentTemplate="{DataTemplate auth:AuthPage}" Route="auth" FlyoutItemIsVisible="False" />

    <FlyoutItem Title="Dashboard" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate dashboard:DashboardPage}" Route="dashboard" />
    </FlyoutItem>

    <FlyoutItem Title="Groups" Icon="groups.png">
        <ShellContent ContentTemplate="{DataTemplate groups:GroupListPage}" Route="groups" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="settings" />
    </FlyoutItem>

</Shell>
