<!DOCTYPE html>
<html>
<head>
    <title>Authentication Success</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { font-family: Arial; padding: 20px; text-align: center; }
        .success { color: green; font-size: 24px; margin: 20px; }
    </style>
</head>
<body>
    <h1>âœ“ Authenticated!</h1>
    <p class="success">Redirecting back to app...</p>
    <p><small>If not redirected, you can close this page.</small></p>
    <script>
        // Extract authorization code from URL
        const urlParams = new URLSearchParams(window.location.search);
        const code = urlParams.get('code');
        const state = urlParams.get('state');
        
        if (code) {
            // Try to deep link back to app with the code
            const appUrl = `costsharingapp://oauth?code=${encodeURIComponent(code)}&state=${encodeURIComponent(state || '')}`;
            window.location.href = appUrl;
            
            // Fallback: close window after 2 seconds
            setTimeout(() => {
                window.close();
            }, 2000);
        }
    </script>
</body>
</html>
